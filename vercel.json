{
  "version": 2,
  "functions": {
    "api/create-payment.js": { "maxDuration": 30 },
    "api/payment-webhook.js": { "maxDuration": 30 },
    "api/save-pending.js": { "maxDuration": 10 }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://jadwa.tech" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type,Authorization" }
      ]
    }
  ]
}
